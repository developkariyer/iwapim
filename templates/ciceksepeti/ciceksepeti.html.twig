{% extends 'base.html.twig' %}
{% block title %} Sticker {% endblock %}
{% block navbaritems %}

{% endblock %}
{% block header %}

{% endblock %}
{% block content %}
    <div class="container-fluid mt-4">
        <h1 class="text-center mb-4">Çiçeksepeti Ürünleri</h1>

        <div class="row">
            <!-- Sol Kenar Çubuğu - Filtreler -->
            <div class="col-lg-3 mb-4">
                <div class="card filter-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Kategori Filtresi</h5>
                    </div>
                    <div class="card-body p-0">
                        <div id="categoryFilter" class="category-filter">
                            {% if grouped|length > 0 %}
                                {% for categoryName, categoryProducts in grouped %}
                                    <div class="category-item">
                                        <div class="form-check p-3 border-bottom">
                                            <input class="form-check-input" type="radio"
                                                   name="categoryFilter"
                                                   id="category-{{ loop.index }}"
                                                   value="{{ categoryName }}"
                                                   {% if app.request.query.get('category') == categoryName %}checked{% endif %}>
                                            <label class="form-check-label d-flex justify-content-between w-100"
                                                   for="category-{{ loop.index }}">
                                                <span>{{ categoryName }}</span>
                                                <span class="badge bg-secondary">{{ categoryProducts|length }}</span>
                                            </label>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="p-3 text-center text-muted">
                                    Kategori bulunamadı
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-footer p-2 d-flex gap-2">
                            <button id="applyFilter" class="btn btn-primary flex-grow-1">Filtrele</button>
                            <button id="clearFilter" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>

                {% if app.request.query.get('category') %}
                    <div class="alert alert-info mt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div><strong>Filtre:</strong> {{ app.request.query.get('category') }}</div>
                            <a href="{{ path('ciceksepeti_main_page') }}" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Ana İçerik - Ürün Grupları -->
            <div class="col-lg-9">
                <!-- Ürün listesi -->
                <div class="row g-4" id="product-container">
                    {% set displayCount = 0 %}
                    {% for categoryName, categoryProducts in grouped %}
                        {% if not app.request.query.get('category') or app.request.query.get('category') == categoryName %}
                            {% for mainCode, products in categoryProducts %}
                                {% set firstProduct = products|first %}
                                {% set displayCount = displayCount + 1 %}
                                <div class="col-12 col-sm-6 col-md-4 col-xl-3 mb-4 product-wrapper"
                                     data-main-code="{{ mainCode }}"
                                     data-category="{{ categoryName }}">
                                    <div class="product-group-card">
                                        <div class="card h-100 shadow-sm">
                                            <div class="category-badge">{{ categoryName }}</div>
                                            <div class="card-img-container">
                                                {% if firstProduct.images is defined and firstProduct.images|length > 0 %}
                                                    <img src="{{ firstProduct.images[0] }}" class="card-img-top" alt="{{ firstProduct.productName|default('Ürün') }}">
                                                {% else %}
                                                    <div class="no-image">Resim yok</div>
                                                {% endif %}
                                                <div class="variant-count-badge">
                                                    {{ products|length }} varyasyon
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <h5 class="card-title">{{ firstProduct.productName|default('İsimsiz Ürün') }}</h5>
                                            </div>
                                            <div class="card-footer bg-transparent border-0 text-center">
                                                <button class="btn btn-sm btn-primary toggle-variants"
                                                        data-main-code="{{ mainCode }}"
                                                        data-category="{{ categoryName }}">
                                                    Varyantları Göster
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endfor %}

                    {% if displayCount == 0 %}
                        <div class="col-12">
                            <div class="alert alert-info">
                                {% if app.request.query.get('category') %}
                                    <div class="text-center py-4">
                                        <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
                                        <h5>Bu kategoride ürün bulunamadı</h5>
                                        <p class="mb-4">Farklı bir kategori seçebilir veya tüm ürünleri görüntüleyebilirsiniz</p>
                                        <a href="{{ path('ciceksepeti_main_page') }}" class="btn btn-primary">
                                            Tüm Ürünleri Göster
                                        </a>
                                    </div>
                                {% else %}
                                    <div class="text-center py-4">
                                        <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
                                        <h5>Hiçbir ürün bulunamadı</h5>
                                        <p>Lütfen daha sonra tekrar deneyin veya sistem yöneticinize başvurun</p>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Tam ekran varyant formu modalı -->
    <div class="modal fade" id="variantsModal" tabindex="-1" aria-labelledby="variantsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="variantsModalLabel">Ürün Varyantları</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body p-0">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- Varyant listesi (sol panel) -->
                            <div class="col-md-3 border-end bg-light p-0" style="height: calc(100vh - 120px); overflow-y: auto;">
                                <div id="variants-list" class="list-group list-group-flush">
                                    <!-- Varyant listesi dinamik olarak buraya eklenecek -->
                                </div>
                            </div>

                            <!-- Varyant detayları ve form (sağ panel) -->
                            <div class="col-md-9 p-0">
                                <div id="variant-form-container" style="height: calc(100vh - 120px); overflow-y: auto;">
                                    <div class="text-center p-5 h-100 d-flex align-items-center justify-content-center">
                                        <div>
                                            <i class="fas fa-arrow-left fa-2x text-muted"></i>
                                            <p class="mt-3 text-muted">Düzenlemek için bir varyant seçin</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Filtre Stilleri */
        .filter-card {
            position: sticky;
            top: 20px;
            border: none;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .category-filter {
            max-height: 400px;
            overflow-y: auto;
            scrollbar-width: thin;
        }

        .category-filter::-webkit-scrollbar {
            width: 6px;
        }

        .category-filter::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .category-filter::-webkit-scrollbar-thumb {
            background-color: #bbb;
            border-radius: 20px;
        }

        .category-item {
            transition: background-color 0.2s;
        }

        .category-item:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

        .category-item label {
            cursor: pointer;
            font-weight: normal;
        }

        /* Ürün Kartı Stilleri */
        .product-group-card {
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
        }

        .product-group-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .product-group-card.active {
            box-shadow: 0 0 0 3px #0d6efd, 0 10px 20px rgba(0,0,0,0.1);
        }

        .category-badge {
            position: absolute;
            top: 0;
            left: 0;
            background: rgba(52, 58, 64, 0.85);
            color: white;
            padding: 4px 8px;
            font-size: 12px;
            border-radius: 0 0 8px 0;
            z-index: 2;
        }

        .card-img-container {
            height: 200px;
            overflow: hidden;
            position: relative;
            border-radius: 8px 8px 0 0;
        }

        .card-img-top {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .variant-count-badge {
            position: absolute;
            bottom: 0;
            right: 0;
            background-color: rgba(13, 110, 253, 0.8);
            color: white;
            padding: 4px 8px;
            font-size: 12px;
            border-radius: 8px 0 0 0;
        }

        .no-image {
            height: 100%;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
        }

        /* Varyant listesi stilleri */
        .list-group-item {
            cursor: pointer;
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
        }

        .list-group-item:hover {
            background-color: #f5f5f5;
        }

        .list-group-item.active {
            background-color: #e9f0fd;
            color: #0d6efd;
            border-left: 3px solid #0d6efd;
        }

        .variant-item-image {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 4px;
        }

        .variant-item-name {
            font-size: 14px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 180px;
        }

        /* Form stilleri */
        .form-section {
            padding: 16px;
            margin-bottom: 12px;
            border-radius: 8px;
            background-color: #f9f9f9;
            border: 1px solid #eee;
        }

        .form-section h6 {
            color: #495057;
            font-weight: 600;
            margin-bottom: 16px;
            padding-bottom: 8px;
            border-bottom: 1px solid #e9ecef;
        }

        .image-preview {
            height: 240px;
            width: 100%;
            object-fit: contain;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 8px;
        }

        /* Galeri önizlemeleri için stiller */
        .gallery-preview {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 8px;
        }

        .gallery-item {
            position: relative;
            width: 80px;
            height: 80px;
            cursor: move;
            border-radius: 4px;
            overflow: hidden;
            border: 2px solid transparent;
            transition: all 0.2s;
        }

        .gallery-item.drag-over {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

        .gallery-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .gallery-image.active {
            border: 2px solid #0d6efd;
        }

        .gallery-actions {
            position: absolute;
            top: 2px;
            right: 2px;
            display: none;
            z-index: 10;
        }

        .gallery-item:hover .gallery-actions {
            display: block;
        }

        .delete-image {
            width: 22px;
            height: 22px;
            padding: 0;
            font-size: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* URL ile resim ekleme alanı */
        .add-image-url-form {
            margin-top: 15px;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 6px;
            background-color: #f8f9fa;
        }

        /* Responsive düzenlemeler */
        @media (max-width: 991px) {
            .filter-card {
                position: static;
            }

            .category-filter {
                max-height: 250px;
            }
        }

        @media (max-width: 767px) {
            .card-img-container {
                height: 160px;
            }
        }

        @media (max-width: 576px) {
            .card-img-container {
                height: 180px;
            }
        }
    </style>
{% endblock %}

{% block body_scripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Modal'ı başlat
            const variantsModal = new bootstrap.Modal(document.getElementById('variantsModal'));
            const variantsList = document.getElementById('variants-list');
            const variantFormContainer = document.getElementById('variant-form-container');
            const modalTitle = document.getElementById('variantsModalLabel');

            // Kategori filtreleme işlemleri
            const categoryRadios = document.querySelectorAll('input[name="categoryFilter"]');
            const applyFilterBtn = document.getElementById('applyFilter');
            const clearFilterBtn = document.getElementById('clearFilter');

            // Filtrele butonuna tıklandığında
            if (applyFilterBtn) {
                applyFilterBtn.addEventListener('click', function() {
                    const selectedCategory = document.querySelector('input[name="categoryFilter"]:checked');

                    if (selectedCategory) {
                        window.location.href = window.location.pathname + '?category=' + encodeURIComponent(selectedCategory.value);
                    } else {
                        alert('Lütfen bir kategori seçin');
                    }
                });
            }

            // Filtreyi temizle butonuna tıklandığında
            if (clearFilterBtn) {
                clearFilterBtn.addEventListener('click', function() {
                    window.location.href = window.location.pathname;
                });
            }

            // Varyantları göster butonu tıklama olayı
            document.querySelectorAll('.toggle-variants').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation();

                    const mainCode = this.dataset.mainCode;
                    const categoryName = this.dataset.category;
                    const productWrapper = this.closest('.product-wrapper');
                    const productName = productWrapper.querySelector('.card-title').textContent;

                    // Modal başlığını ayarla
                    modalTitle.textContent = `${productName} - Varyantlar (${categoryName})`;

                    // Varyant listesini temizle ve yükle
                    variantsList.innerHTML = '<div class="text-center p-3"><div class="spinner-border spinner-border-sm text-primary" role="status"></div><span class="ms-2">Yükleniyor...</span></div>';
                    variantFormContainer.innerHTML = `
                        <div class="text-center p-5 h-100 d-flex align-items-center justify-content-center">
                            <div>
                                <i class="fas fa-arrow-left fa-2x text-muted"></i>
                                <p class="mt-3 text-muted">Düzenlemek için bir varyant seçin</p>
                            </div>
                        </div>
                    `;

                    // Veri hazırlama
                    loadVariantsList(categoryName, mainCode);

                    // Modal'ı göster
                    variantsModal.show();
                });
            });

            // Varyant listesini yükleme fonksiyonu
            function loadVariantsList(categoryName, mainCode) {
                setTimeout(() => {
                    let listHTML = '';

                    {% if grouped is defined %}
                    {% for catName, categoryProducts in grouped %}
                    if ('{{ catName }}' === categoryName) {
                        {% for code, listings in categoryProducts %}
                        if ('{{ code }}' === mainCode) {
                            {% for listing in listings %}
                            listHTML += `
                                <a href="#" class="list-group-item list-group-item-action d-flex align-items-center py-2 px-3"
                                   data-variant-index="{{ loop.index0 }}" data-category="{{ catName }}" data-main-code="{{ code }}">
                                    <div class="me-2">
                                        {% if listing.images is defined and listing.images|length > 0 %}
                                            <img src="{{ listing.images[0] }}" class="variant-item-image" alt="">
                                        {% else %}
                                            <div class="variant-item-image bg-light d-flex align-items-center justify-content-center text-muted">
                                                <i class="fas fa-image"></i>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="variant-item-name">{{ listing.productName|default('İsimsiz Ürün')|e('js') }}</span>
                                        <small class="text-muted">{{ listing.productCode|default('') }}</small>
                                    </div>
                                </a>
                            `;
                            {% endfor %}
                        }
                        {% endfor %}
                    }
                    {% endfor %}
                    {% endif %}

                    if (listHTML === '') {
                        variantsList.innerHTML = '<div class="p-3 text-center text-muted">Varyant bulunamadı</div>';
                    } else {
                        variantsList.innerHTML = listHTML;

                        // Varyant listesi öğelerine tıklama olayı ekle
                        document.querySelectorAll('.list-group-item').forEach(item => {
                            item.addEventListener('click', function(e) {
                                e.preventDefault();

                                // Aktif sınıfını değiştir
                                document.querySelectorAll('.list-group-item').forEach(i => i.classList.remove('active'));
                                this.classList.add('active');

                                // Varyant bilgilerini al
                                const variantIndex = this.dataset.variantIndex;
                                const categoryName = this.dataset.category;
                                const mainCode = this.dataset.mainCode;

                                // Varyant detay formunu yükle
                                loadVariantForm(categoryName, mainCode, variantIndex);
                            });
                        });
                    }
                }, 500);
            }

            // Varyant detay formunu yükleme fonksiyonu
            function loadVariantForm(categoryName, mainCode, variantIndex) {
                variantFormContainer.innerHTML = '<div class="text-center p-5"><div class="spinner-border text-primary" role="status"></div><span class="ms-2">Form yükleniyor...</span></div>';

                setTimeout(() => {
                    let formHTML = '';

                    {% if grouped is defined %}
                    {% for catName, categoryProducts in grouped %}
                    if ('{{ catName }}' === categoryName) {
                        {% for code, listings in categoryProducts %}
                        if ('{{ code }}' === mainCode) {
                            {% for listing in listings %}
                            if ({{ loop.index0 }} == variantIndex) {
                                formHTML = `
                                    <form id="variant-edit-form" class="p-4">
                                        <input type="hidden" name="variantIndex" value="${variantIndex}">
                                        <input type="hidden" name="mainProductCode" value="{{ listing.mainProductCode|default('')|e('js') }}">
                                        <input type="hidden" name="categoryName" value="{{ catName|e('js') }}">
                                        <input type="hidden" name="categoryId" value="{{ listing.categoryId|default('')|e('js') }}">

                                        <div class="row">
                                            <!-- Sol Kolon: Resim ve ürün adı -->
                                            <div class="col-md-4">
                                                <div class="form-section">
                                                    <h6>Ürün Görselleri</h6>
                                                    <div class="text-center mb-3">
                                                        <img id="main-image-preview" src="{{ listing.images[0]|default('')|e('js') }}"
                                                            class="image-preview" alt="Ürün Görseli">
                                                    </div>

                                                    <div class="gallery-preview" id="gallery-container">
                                                        {% if listing.images is defined %}
                                                            {% for img in listing.images %}
                                                                <div class="gallery-item" draggable="true">
                                                                    <img src="{{ img }}" class="gallery-image {% if loop.first %}active{% endif %}"
                                                                        data-index="{{ loop.index0 }}" alt="Görsel {{ loop.index }}">
                                                                    <div class="gallery-actions">
                                                                        <button type="button" class="btn btn-sm btn-danger delete-image" title="Görseli Sil">
                                                                            <i class="fas fa-times"></i>
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        {% endif %}
                                                    </div>

                                                    <div class="add-image-url-form mt-3">
                                                        <div class="input-group input-group-sm">
                                                            <input type="url" class="form-control" id="image-url-input"
                                                                   placeholder="https:// ile başlayan görsel URL'si girin"
                                                                   pattern="https://.*">
                                                            <button class="btn btn-primary" type="button" id="add-image-url-btn">
                                                                Ekle
                                                            </button>
                                                        </div>
                                                        <div class="form-text small text-muted">
                                                            Sadece https:// ile başlayan görseller eklenebilir.
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Sağ kolon: Form Alanları -->
                                            <div class="col-md-8">
                                                <div class="form-section">
                                                    <h6>Kategori Bilgisi</h6>
                                                    <div class="row">
                                                        <div class="col-12 mb-3">
                                                            <label class="form-label">Kategori</label>
                                                            <input type="text" class="form-control" value="{{ catName }}" readonly>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-section">
                                                    <h6>Temel Bilgiler</h6>
                                                    <div class="row">
                                                        <div class="col-md-8 mb-3">
                                                            <label for="productName" class="form-label">Ürün Adı</label>
                                                            <input type="text" class="form-control" id="productName" name="productName" value="{{ listing.productName|default('')|e('js') }}">
                                                        </div>

                                                        <div class="col-md-4 mb-3">
                                                            <label for="productCode" class="form-label">Ürün Kodu</label>
                                                            <input type="text" class="form-control" id="productCode" name="productCode" value="{{ listing.productCode|default('')|e('js') }}" readonly>
                                                        </div>

                                                        <div class="col-md-6 mb-3">
                                                            <label for="barcode" class="form-label">Barkod</label>
                                                            <input type="text" class="form-control" id="barcode" name="barcode" value="{{ listing.barcode|default('')|e('js') }}">
                                                        </div>

                                                        <div class="col-md-6 mb-3">
                                                            <label for="stockCode" class="form-label">Stok Kodu</label>
                                                            <input type="text" class="form-control" id="stockCode" name="stockCode" value="{{ listing.stockCode|default('')|e('js') }}">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-section">
                                                    <h6>Fiyat ve Stok</h6>
                                                    <div class="row">
                                                        <div class="col-md-4 mb-3">
                                                            <label for="listPrice" class="form-label">Liste Fiyatı</label>
                                                            <input type="text" class="form-control" id="listPrice" name="listPrice" value="{{ listing.listPrice|default('')|e('js') }}">
                                                        </div>

                                                        <div class="col-md-4 mb-3">
                                                            <label for="salesPrice" class="form-label">Satış Fiyatı</label>
                                                            <input type="text" class="form-control" id="salesPrice" name="salesPrice" value="{{ listing.salesPrice|default('')|e('js') }}">
                                                        </div>

                                                        <div class="col-md-4 mb-3">
                                                            <label for="stockQuantity" class="form-label">Stok Miktarı</label>
                                                            <input type="number" class="form-control" id="stockQuantity" name="stockQuantity" value="{{ listing.stockQuantity|default('')|e('js') }}">
                                                        </div>

                                                        <div class="col-md-4 mb-3">
                                                            <label for="commissionRate" class="form-label">Komisyon Oranı (%)</label>
                                                            <input type="text" class="form-control" id="commissionRate" name="commissionRate" value="{{ listing.commissionRate|default('')|e('js') }}">
                                                        </div>

                                                        <div class="col-md-4 mb-3">
                                                            <label for="numberOfFavorites" class="form-label">Favori Sayısı</label>
                                                            <input type="number" class="form-control" id="numberOfFavorites" name="numberOfFavorites" value="{{ listing.numberOfFavorites|default('')|e('js') }}" readonly>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-section">
                                                    <h6>Durum ve Teslimat</h6>
                                                    <div class="row">

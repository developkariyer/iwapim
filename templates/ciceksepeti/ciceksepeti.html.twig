{% extends 'base.html.twig' %}
{% block title %} Sticker {% endblock %}
{% block navbaritems %}

{% endblock %}
{% block header %}

{% endblock %}
{% block content %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Çiçeksepeti Ürünleri</h1>

        <!-- Ana ürün grupları -->
        <div class="row g-4 product-groups" id="product-container">
            {% if groupedListings|length > 0 %}
                {% for mainCode, products in groupedListings %}
                    {% set firstProduct = products|first %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 product-wrapper" data-main-code="{{ mainCode }}">
                        <div class="product-group-card">
                            <div class="card h-100 shadow-sm">
                                <div class="card-img-container">
                                    {% if firstProduct.images is defined and firstProduct.images|length > 0 %}
                                        <img src="{{ firstProduct.images[0] }}" class="card-img-top" alt="{{ firstProduct.productName|default('Ürün') }}">
                                    {% else %}
                                        <div class="no-image">Resim yok</div>
                                    {% endif %}
                                    <div class="variant-count-badge">
                                        {{ products|length }} varyasyon
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ firstProduct.productName|default('İsimsiz Ürün') }}</h5>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-center">
                                    <button class="btn btn-sm btn-primary toggle-variants">Varyantları Göster</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">Hiçbir ürün bulunamadı.</div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Tam ekran varyant formu modalı -->
    <div class="modal fade" id="variantsModal" tabindex="-1" aria-labelledby="variantsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="variantsModalLabel">Ürün Varyantları</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body p-0">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- Varyant listesi (sol panel) -->
                            <div class="col-md-3 border-end bg-light p-0" style="height: calc(100vh - 120px); overflow-y: auto;">
                                <div id="variants-list" class="list-group list-group-flush">
                                    <!-- Varyant listesi dinamik olarak buraya eklenecek -->
                                </div>
                            </div>

                            <!-- Varyant detayları ve form (sağ panel) -->
                            <div class="col-md-9 p-0">
                                <div id="variant-form-container" style="height: calc(100vh - 120px); overflow-y: auto;">
                                    <div class="text-center p-5 h-100 d-flex align-items-center justify-content-center">
                                        <div>
                                            <i class="fas fa-arrow-left fa-2x text-muted"></i>
                                            <p class="mt-3 text-muted">Düzenlemek için bir varyant seçin</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-group-card {
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
        }

        .product-group-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .product-group-card.active {
            box-shadow: 0 0 0 3px #0d6efd, 0 10px 20px rgba(0,0,0,0.1);
        }

        .card-img-container {
            height: 200px;
            overflow: hidden;
            position: relative;
            border-radius: 8px 8px 0 0;
        }

        .card-img-top {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .variant-count-badge {
            position: absolute;
            bottom: 0;
            right: 0;
            background-color: rgba(13, 110, 253, 0.8);
            color: white;
            padding: 4px 8px;
            font-size: 12px;
            border-radius: 8px 0 0 0;
        }

        .no-image {
            height: 100%;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
        }

        /* Varyant listesi stilleri */
        .list-group-item {
            cursor: pointer;
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
        }

        .list-group-item:hover {
            background-color: #f5f5f5;
        }

        .list-group-item.active {
            background-color: #e9f0fd;
            color: #0d6efd;
            border-left: 3px solid #0d6efd;
        }

        .variant-item-image {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 4px;
        }

        .variant-item-name {
            font-size: 14px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 180px;
        }

        /* Form stilleri */
        .form-section {
            padding: 16px;
            margin-bottom: 12px;
            border-radius: 8px;
            background-color: #f9f9f9;
            border: 1px solid #eee;
        }

        .form-section h6 {
            color: #495057;
            font-weight: 600;
            margin-bottom: 16px;
            padding-bottom: 8px;
            border-bottom: 1px solid #e9ecef;
        }

        .image-preview {
            height: 240px;
            width: 100%;
            object-fit: contain;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 8px;
        }

        .gallery-preview {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 8px;
        }

        .gallery-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 4px;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.2s;
        }

        .gallery-image.active {
            border-color: #0d6efd;
        }

        .gallery-image:hover {
            transform: scale(1.05);
        }

        .status-badge {
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 4px;
        }

        .status-active {
            background-color: #d4edda;
            color: #155724;
        }

        .status-inactive {
            background-color: #f8d7da;
            color: #721c24;
        }

        /* Responsive düzenlemeler */
        @media (max-width: 767px) {
            .card-img-container {
                height: 160px;
            }
        }

        @media (max-width: 576px) {
            .card-img-container {
                height: 180px;
            }
        }
    </style>
{% endblock %}

{% block body_scripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Modal'ı başlat
            const variantsModal = new bootstrap.Modal(document.getElementById('variantsModal'));
            const variantsList = document.getElementById('variants-list');
            const variantFormContainer = document.getElementById('variant-form-container');
            const modalTitle = document.getElementById('variantsModalLabel');

            // Varyantları göster butonu tıklama olayı
            document.querySelectorAll('.toggle-variants').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation();

                    const productWrapper = this.closest('.product-wrapper');
                    const mainCode = productWrapper.dataset.mainCode;
                    const productName = productWrapper.querySelector('.card-title').textContent;

                    // Modal başlığını ayarla
                    modalTitle.textContent = `${productName} - Varyantlar`;

                    // Varyant listesini temizle ve yükle
                    variantsList.innerHTML = '<div class="text-center p-3"><div class="spinner-border spinner-border-sm text-primary" role="status"></div><span class="ms-2">Yükleniyor...</span></div>';
                    variantFormContainer.innerHTML = `
                        <div class="text-center p-5 h-100 d-flex align-items-center justify-content-center">
                            <div>
                                <i class="fas fa-arrow-left fa-2x text-muted"></i>
                                <p class="mt-3 text-muted">Düzenlemek için bir varyant seçin</p>
                            </div>
                        </div>
                    `;

                    // Veri hazırlama
                    loadVariantsList(mainCode);

                    // Modal'ı göster
                    variantsModal.show();
                });
            });

            // Varyant listesini yükleme fonksiyonu
            function loadVariantsList(mainCode) {
                setTimeout(() => {
                    let listHTML = '';

                    {% if groupedListings is defined %}
                    {% for code, listings in groupedListings %}
                    if ('{{ code }}' === mainCode) {
                        {% for listing in listings %}
                        listHTML += `
                                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center py-2 px-3"
                                           data-variant-index="{{ loop.index0 }}">
                                            <div class="me-2">
                                                {% if listing.images is defined and listing.images|length > 0 %}
                                                    <img src="{{ listing.images[0] }}" class="variant-item-image" alt="">
                                                {% else %}
                                                    <div class="variant-item-image bg-light d-flex align-items-center justify-content-center text-muted">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span class="variant-item-name">${escapeHtml('{{ listing.productName|default('İsimsiz Ürün')|e('js') }}')}</span>
                                                <small class="text-muted">{{ listing.productCode }}</small>
                                            </div>
                                        </a>
                                    `;
                        {% endfor %}
                    }
                    {% endfor %}
                    {% endif %}

                    if (listHTML === '') {
                        variantsList.innerHTML = '<div class="p-3 text-center text-muted">Varyant bulunamadı</div>';
                    } else {
                        variantsList.innerHTML = listHTML;

                        // Varyant listesi öğelerine tıklama olayı ekle
                        document.querySelectorAll('.list-group-item').forEach(item => {
                            item.addEventListener('click', function(e) {
                                e.preventDefault();

                                // Aktif sınıfını değiştir
                                document.querySelectorAll('.list-group-item').forEach(i => i.classList.remove('active'));
                                this.classList.add('active');

                                // Varyant indeksini al
                                const variantIndex = this.dataset.variantIndex;

                                // Varyant detay formunu yükle
                                loadVariantForm(mainCode, variantIndex);
                            });
                        });
                    }
                }, 500);
            }

            // Varyant detay formunu yükleme fonksiyonu
            function loadVariantForm(mainCode, variantIndex) {
                variantFormContainer.innerHTML = '<div class="text-center p-5"><div class="spinner-border text-primary" role="status"></div><span class="ms-2">Form yükleniyor...</span></div>';

                setTimeout(() => {
                    let formHTML = '';

                    {% if groupedListings is defined %}
                    {% for code, listings in groupedListings %}
                    if ('{{ code }}' === mainCode) {
                        {% for listing in listings %}
                        if ({{ loop.index0 }} == variantIndex) {
                            const variant = {
                                link: '{{ listing.link|default('#')|e('js') }}',
                                images: {{ listing.images|json_encode|raw }},
                                barcode: '{{ listing.barcode|default('')|e('js') }}',
                                variantIsActive: {{ listing.variantIsActive ? 'true' : 'false' }},
                                listPrice: '{{ listing.listPrice|default('')|e('js') }}',
                                stockCode: '{{ listing.stockCode|default('')|e('js') }}',
                                attributes: {{ listing.attributes|json_encode|raw }},
                                salesPrice: '{{ listing.salesPrice|default('')|e('js') }}',
                                description: '{{ listing.description|default('')|e('js') }}',
                                productCode: '{{ listing.productCode|default('')|e('js') }}',
                                productName: '{{ listing.productName|default('İsimsiz Ürün')|e('js') }}',
                                deliveryType: '{{ listing.deliveryType|default('')|e('js') }}',
                                stockQuantity: '{{ listing.stockQuantity|default('')|e('js') }}',
                                commissionRate: '{{ listing.commissionRate|default('')|e('js') }}',
                                mainProductCode: '{{ listing.mainProductCode|default('')|e('js') }}',
                                numberOfFavorites: '{{ listing.numberOfFavorites|default('')|e('js') }}',
                                productIsActive: '{{ listing.productIsActive|default('')|e('js') }}',
                                deliveryMessageType: '{{ listing.deliveryMessageType|default('')|e('js') }}'
                            };

                            formHTML = `
                                            <form id="variant-edit-form" class="p-4">
                                                <input type="hidden" name="variantIndex" value="${variantIndex}">
                                                <input type="hidden" name="mainProductCode" value="${escapeHtml(variant.mainProductCode)}">

                                                <div class="row">
                                                    <!-- Sol Kolon: Resim ve ürün adı -->
                                                    <div class="col-md-4">
                                                        <div class="form-section">
                                                            <h6>Ürün Görselleri</h6>
                                                            <div class="text-center mb-3">
                                                                <img id="main-image-preview" src="${variant.images && variant.images.length > 0 ? variant.images[0] : ''}"
                                                                    class="image-preview" alt="Ürün Görseli">
                                                            </div>

                                                            <div class="gallery-preview">
                                                                ${variant.images && variant.images.map((img, idx) => `
                                                                    <img src="${img}" class="gallery-image ${idx === 0 ? 'active' : ''}"
                                                                        data-index="${idx}" alt="Görsel ${idx+1}">
                                                                `).join('')}
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Sağ kolon: Form Alanları -->
                                                    <div class="col-md-8">
                                                        <div class="form-section">
                                                            <h6>Temel Bilgiler</h6>
                                                            <div class="row">
                                                                <div class="col-md-8 mb-3">
                                                                    <label for="productName" class="form-label">Ürün Adı</label>
                                                                    <input type="text" class="form-control" id="productName" name="productName" value="${escapeHtml(variant.productName)}">
                                                                </div>

                                                                <div class="col-md-4 mb-3">
                                                                    <label for="productCode" class="form-label">Ürün Kodu</label>
                                                                    <input type="text" class="form-control" id="productCode" name="productCode" value="${escapeHtml(variant.productCode)}" readonly>
                                                                </div>

                                                                <div class="col-md-6 mb-3">
                                                                    <label for="barcode" class="form-label">Barkod</label>
                                                                    <input type="text" class="form-control" id="barcode" name="barcode" value="${escapeHtml(variant.barcode)}">
                                                                </div>

                                                                <div class="col-md-6 mb-3">
                                                                    <label for="stockCode" class="form-label">Stok Kodu</label>
                                                                    <input type="text" class="form-control" id="stockCode" name="stockCode" value="${escapeHtml(variant.stockCode)}">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-section">
                                                            <h6>Fiyat ve Stok</h6>
                                                            <div class="row">
                                                                <div class="col-md-4 mb-3">
                                                                    <label for="listPrice" class="form-label">Liste Fiyatı</label>
                                                                    <input type="text" class="form-control" id="listPrice" name="listPrice" value="${escapeHtml(variant.listPrice)}">
                                                                </div>

                                                                <div class="col-md-4 mb-3">
                                                                    <label for="salesPrice" class="form-label">Satış Fiyatı</label>
                                                                    <input type="text" class="form-control" id="salesPrice" name="salesPrice" value="${escapeHtml(variant.salesPrice)}">
                                                                </div>

                                                                <div class="col-md-4 mb-3">
                                                                    <label for="stockQuantity" class="form-label">Stok Miktarı</label>
                                                                    <input type="number" class="form-control" id="stockQuantity" name="stockQuantity" value="${escapeHtml(variant.stockQuantity)}">
                                                                </div>

                                                                <div class="col-md-4 mb-3">
                                                                    <label for="commissionRate" class="form-label">Komisyon Oranı (%)</label>
                                                                    <input type="text" class="form-control" id="commissionRate" name="commissionRate" value="${escapeHtml(variant.commissionRate)}">
                                                                </div>

                                                                <div class="col-md-4 mb-3">
                                                                    <label for="numberOfFavorites" class="form-label">Favori Sayısı</label>
                                                                    <input type="number" class="form-control" id="numberOfFavorites" name="numberOfFavorites" value="${escapeHtml(variant.numberOfFavorites)}" readonly>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-section">
                                                            <h6>Durum ve Teslimat</h6>
                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label class="form-label d-block">Varyant Durumu</label>
                                                                    <div class="form-check form-check-inline">
                                                                        <input class="form-check-input" type="radio" name="variantIsActive" id="variantIsActiveYes" value="1" ${variant.variantIsActive ? 'checked' : ''}>
                                                                        <label class="form-check-label" for="variantIsActiveYes">Aktif</label>
                                                                    </div>
                                                                    <div class="form-check form-check-inline">
                                                                        <input class="form-check-input" type="radio" name="variantIsActive" id="variantIsActiveNo" value="0" ${!variant.variantIsActive ? 'checked' : ''}>
                                                                        <label class="form-check-label" for="variantIsActiveNo">Pasif</label>
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6 mb-3">
                                                                    <label for="deliveryType" class="form-label">Teslimat Tipi</label>
                                                                    <input type="text" class="form-control" id="deliveryType" name="deliveryType" value="${escapeHtml(variant.deliveryType)}">
                                                                </div>

                                                                <div class="col-md-12 mb-3">
                                                                    <label for="deliveryMessageType" class="form-label">Teslimat Mesaj Tipi</label>
                                                                    <input type="text" class="form-control" id="deliveryMessageType" name="deliveryMessageType" value="${escapeHtml(variant.deliveryMessageType)}">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-section">
                                                            <h6>Ürün Açıklaması</h6>
                                                            <div class="mb-3">
                                                                <textarea class="form-control" id="description" name="description" rows="4">${escapeHtml(variant.description)}</textarea>
                                                            </div>
                                                        </div>

                                                        <div class="form-section">
                                                            <h6>Diğer Bilgiler</h6>
                                                            <div class="row">
                                                                <div class="col-12 mb-3">
                                                                    <label for="link" class="form-label">Ürün Linki</label>
                                                                    <div class="input-group">
                                                                        <input type="text" class="form-control" id="link" name="link" value="${escapeHtml(variant.link)}" readonly>
                                                                        <button class="btn btn-outline-secondary" type="button" id="copyLink">
                                                                            <i class="fas fa-copy"></i>
                                                                        </button>
                                                                        <a href="${escapeHtml(variant.link)}" target="_blank" class="btn btn-outline-primary">
                                                                            <i class="fas fa-external-link-alt"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="mb-3">
                                                                <label class="form-label">Özellikler</label>
                                                                <div class="table-responsive">
                                                                    <table class="table table-sm table-bordered">
                                                                        <thead class="table-light">
                                                                            <tr>
                                                                                <th>Özellik</th>
                                                                                <th>Değer</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            ${variant.attributes && Object.entries(variant.attributes).map(([key, value]) => `
                                                                                <tr>
                                                                                    <td>${escapeHtml(key)}</td>
                                                                                    <td>
                                                                                        <input type="text" class="form-control form-control-sm"
                                                                                            name="attributes[${escapeHtml(key)}]" value="${escapeHtml(value)}">
                                                                                    </td>
                                                                                </tr>
                                                                            `).join('')}
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="d-flex justify-content-between mt-4">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        `;
                        }
                        {% endfor %}
                    }
                    {% endfor %}
                    {% endif %}

                    if (formHTML === '') {
                        variantFormContainer.innerHTML = '<div class="text-center p-5 text-danger">Varyant bilgisi yüklenemedi</div>';
                    } else {
                        variantFormContainer.innerHTML = formHTML;

                        // Galeri resimlerine tıklama olayı
                        document.querySelectorAll('.gallery-image').forEach(img => {
                            img.addEventListener('click', function() {
                                // Aktif sınıfını değiştir
                                document.querySelectorAll('.gallery-image').forEach(i => i.classList.remove('active'));
                                this.classList.add('active');

                                // Ana resmi güncelle
                                document.getElementById('main-image-preview').src = this.src;
                            });
                        });

                        // Link kopyalama olayı
                        document.getElementById('copyLink')?.addEventListener('click', function() {
                            const linkInput = document.getElementById('link');
                            linkInput.select();
                            document.execCommand('copy');

                            // Geri bildirim ver
                            const originalText = this.innerHTML;
                            this.innerHTML = '<i class="fas fa-check"></i>';
                            setTimeout(() => {
                                this.innerHTML = originalText;
                            }, 2000);
                        });

                        // Form gönderimi olayı
                        document.getElementById('variant-edit-form').addEventListener('submit', function(e) {
                            e.preventDefault();

                            // Form verilerini topla
                            const formData = new FormData(this);
                            const formObject = {};
                            for (let [key, value] of formData.entries()) {
                                formObject[key] = value;
                            }

                            console.log('Form verileri:', formObject);

                            // Burada API çağrısı yapılabilir
                            // ...

                            // Başarılı mesajı göster
                            const submitBtn = this.querySelector('button[type="submit"]');
                            const originalText = submitBtn.textContent;
                            submitBtn.innerHTML = '<i class="fas fa-check"></i> Kaydedildi';
                            submitBtn.classList.remove('btn-primary');
                            submitBtn.classList.add('btn-success');

                            setTimeout(() => {
                                submitBtn.textContent = originalText;
                                submitBtn.classList.remove('btn-success');
                                submitBtn.classList.add('btn-primary');
                            }, 2000);
                        });
                    }
                }, 700);
            }

            // HTML escape helper
            function escapeHtml(unsafe) {
                return unsafe
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/"/g, "&quot;")
                    .replace(/'/g, "&#039;");
            }
        });
    </script>

{% endblock %}

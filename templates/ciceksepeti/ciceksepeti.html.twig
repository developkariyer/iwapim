{% extends 'base.html.twig' %}
{% block title %} Sticker {% endblock %}
{% block navbaritems %}

{% endblock %}
{% block header %}

{% endblock %}
{% block content %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Çiçeksepeti Ürünleri</h1>

        <!-- Ana ürün grupları -->
        <div class="row g-4 product-groups">
            {% set groupedProducts = {} %}

            {# Ürünleri mainProductCode'a göre gruplandır #}
            {% for listing in ciceksepetiListings %}
                {% set mainCode = listing.mainProductCode %}
                {% if mainCode not in groupedProducts|keys %}
                    {% set groupedProducts = groupedProducts|merge({(mainCode): []}) %}
                {% endif %}
                {% set groupedProducts = groupedProducts|merge({
                    (mainCode): groupedProducts[mainCode]|merge([listing])
                }) %}
            {% endfor %}

            {% if groupedProducts|length > 0 %}
                {% for mainCode, products in groupedProducts %}
                    {% set firstProduct = products|first %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <div class="product-group-card" data-main-code="{{ mainCode }}">
                            <div class="card h-100 shadow-sm">
                                <div class="card-img-container">
                                    {% if firstProduct.images is defined and firstProduct.images|length > 0 %}
                                        <img src="{{ firstProduct.images[0] }}" class="card-img-top" alt="{{ firstProduct.productName|default('Ürün') }}">
                                    {% else %}
                                        <div class="no-image">Resim yok</div>
                                    {% endif %}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ firstProduct.productName|default('İsimsiz Ürün') }}</h5>
                                    <p class="card-text">
                                        <small class="text-muted">{{ products|length }} varyasyon</small>
                                    </p>
                                    <button class="btn btn-primary show-variants">Varyasyonları Göster</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">Hiçbir ürün bulunamadı.</div>
                </div>
            {% endif %}
        </div>

        <!-- Ürün varyasyonları modalı -->
        <div class="modal fade" id="variantsModal" tabindex="-1" aria-labelledby="variantsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="variantsModalLabel">Ürün Varyasyonları</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                    </div>
                    <div class="modal-body">
                        <div class="variants-container row g-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



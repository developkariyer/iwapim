                                                                <tbody>
                                                                    {% if listing.attributes is iterable and listing.attributes is not empty %}
                                                                        {% for attr in listing.attributes %}
                                                                            <tr>
                                                                                <td>
                                                                                    <strong>{{ attr.parentName|default('') }}</strong>
                                                                                    <input type="hidden" name="attributes[{{ loop.index0 }}][parentName]" value="{{ attr.parentName|default('')|e('html_attr') }}">

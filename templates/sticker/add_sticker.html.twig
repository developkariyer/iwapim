{% extends 'sticker/base.html.twig' %}
{% block title %} Sticker {% endblock %}
{% block content %}

    <div class="container mt-2">
        <div class="row">
            <div class="col-12 mt-5">
                <h1>Add New Sticker</h1>
                <form method="post" action="/sticker/add-sticker" class="mt-3">
                    <input type="text" name="form_data" placeholder="ASIN" class="form-control mb-3">
                    <select name="group_id" class="form-control mb-3">
                        <option value="" disabled selected>Select a group</option>
                        {% for group in groups %}
                            <option value="{{ group.id }}">{{ group.group_name }}</option>
                        {% else %}
                            <option value="" disabled>No groups available</option>
                        {% endfor %}
                    </select>
                    <div class="d-flex flex-column">
                        <button type="submit" class="btn btn-success mb-2">Add Sticker</button>
                        <a href="{{ path('sticker_main_page') }}" class="btn btn-primary">Main Page</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
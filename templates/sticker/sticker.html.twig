<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IWAPIM Katalog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        :root {
            --primary-color: #2563eb;
            --secondary-color: #1e40af;
            --accent-color: #3b82f6;
            --background-color: #f8fafc;
            --card-bg: #ffffff;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --border-color: #e2e8f0;
            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --radius-sm: 0.375rem;
            --radius-md: 0.5rem;
            --radius-lg: 0.75rem;
        }

        body {
            background-color: var(--background-color);
            font-family: 'Inter', system-ui, sans-serif;
            color: var(--text-primary);
            line-height: 1.5;
        }

        .header-section {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            padding: 1rem 0;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-md);
        }

        .header-section h1 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
        }

        .search-container {
            background-color: var(--card-bg);
            border-radius: var(--radius-md);
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
        }

        .form-control, .form-select, .btn {
            border-radius: var(--radius-sm);
            font-size: 0.95rem;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.25);
            border-color: var(--accent-color);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
        }

        .btn-primary:hover {
            background-color: var(--secondary-color);
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .product-card {
            background-color: var(--card-bg);
            margin-bottom: 1.25rem;
            overflow: hidden;
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
            height: auto;
            max-height: 160px;
        }

        .product-card.expanded {
            max-height: none;
            box-shadow: var(--shadow-lg);
        }

        .product-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

        .product-main-image {
            cursor: pointer;
            height: 160px;
            width: 160px;
            object-fit: cover;
            border-radius: var(--radius-sm);
            transition: transform 0.3s ease;
        }

        .product-main-image:hover {
            transform: scale(1.05);
        }

        .card-body {
            padding: 1rem;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
            line-height: 1.3;
        }

        .product-info {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .product-info b {
            font-weight: 600;
            color: var(--text-primary);
        }

        .product-gallery {
            display: flex;
            flex-wrap: wrap;
            gap: 0.25rem;
            padding: 0.5rem;
        }

        .product-gallery img {
            width: 45px;
            height: 45px;
            object-fit: cover;
            border-radius: var(--radius-sm);
            border: 1px solid var(--border-color);
            transition: transform 0.2s ease;
        }

        .product-gallery img:hover {
            transform: scale(1.1);
            border-color: var(--accent-color);
        }

        .sku {
            cursor: pointer;
            color: var(--primary-color);
            font-weight: 500;
            transition: all 0.2s ease;
            margin-right: 0.25rem;
        }

        .sku:hover {
            color: var(--secondary-color);
            text-decoration: underline;
        }

        .pagination {
            margin-top: 1.5rem;
            margin-bottom: 2rem;
        }

        .page-link {
            color: var(--text-primary);
            border: 1px solid var(--border-color);
            padding: 0.5rem 0.75rem;
            min-width: 2.25rem;
            text-align: center;
        }

        .page-item.active .page-link {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .page-link:hover {
            background-color: var(--accent-color);
            color: white;
        }

        .page-item.disabled .page-link {
            color: var(--text-secondary);
            opacity: 0.6;
        }

        .copy-notification {
            position: fixed;
            bottom: 1.5rem;
            right: 1.5rem;
            background: linear-gradient(135deg, #10b981, #047857);
            color: white;
            padding: 0.75rem 1.25rem;
            border-radius: var(--radius-sm);
            box-shadow: var(--shadow-md);
            z-index: 1000;
            font-weight: 500;
            opacity: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .product-specs {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-top: 0.5rem;
        }

        .spec-badge {
            background-color: #f1f5f9;
            color: var(--text-secondary);
            padding: 0.25rem 0.75rem;
            border-radius: 1.5rem;
            font-size: 0.8rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
        }

        .spec-badge i {
            color: var(--accent-color);
            font-size: 0.75rem;
        }

        @media (max-width: 768px) {
            .product-card {
                max-height: none;
            }

            .product-main-image {
                height: 120px;
                width: 120px;
            }
        }
    </style>
</head>
<body>
<!-- Header Section -->
<div class="header-section">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-cubes me-2"></i>IWAPIM Ürün Kataloğu</h1>
            <div class="d-none d-md-block">
                <span><i class="fas fa-th-list me-1"></i> {{ products|length }} / {{ totalProducts ?? 'Tüm' }} ürün gösteriliyor</span>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Search and Filters -->
    <div class="search-container">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" id="search-box" class="form-control" placeholder="Ürün ile ilgili herhangi bir bilgi girerek arayın...">
                    <button type="button" id="search-button" class="btn btn-primary">Ara</button>
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='/catalog'">Sıfırla</button>
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                    <select class="form-select" id="category-select">
                        <option value="all" selected>Tüm Ürün Tipleri</option>
                        {% for type in productTypes %}
                            <option value="{{ type }}">{{ type }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-list-ol"></i></span>
                    <select class="form-select" id="page-size-select">
                        <option value="5">5 Ürün</option>
                        <option value="10">10 Ürün</option>
                        <option value="20">20 Ürün</option>
                        <option value="50">50 Ürün</option>
                        <option value="100">100 Ürün</option>
                        <option value="200">200 Ürün</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Product catalog container -->
    <div id="catalog-container">
        {% for product in products %}
            <div class="product-card">
                <div class="row g-0">
                    <div class="col-auto p-2">
                        <img src="{{ product.image }}" class="product-main-image" alt="Product Image">
                    </div>
                    <div class="col">
                        <div class="card-body product-info">
                            <h5 class="card-title">{{ product.productIdentifier }} {{ product.name }}</h5>

                            <div class="product-specs">
                                {% if product.variationSizeList %}
                                    <span class="spec-badge"><i class="fas fa-ruler"></i> {{ product.variationSizeList }}</span>
                                {% endif %}

                                {% if product.variationColorList %}
                                    <span class="spec-badge"><i class="fas fa-palette"></i> {{ product.variationColorList }}</span>
                                {% endif %}
                            </div>

                            <div class="mt-2">
                                <div class="d-flex align-items-center">
                                    <small class="text-muted me-2"><i class="fas fa-barcode"></i> IWASKU:</small>
                                    <div>
                                        {% for item in product.iwaskuList %}
                                            <span class="sku" data-iwasku="{{ item.iwasku }}" data-bs-toggle="tooltip" title="{{ item.tooltip }}">
                                                    {{ item.iwasku }}
                                                </span>
                                            {% if not loop.last %}<span class="text-muted">|</span>{% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-auto d-none d-md-block border-start">
                        <div class="product-gallery">
                            {% for image in product.album %}
                                {{ image|raw }}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center">
        <nav aria-label="Product pagination">
            <ul class="pagination">
                <li class="page-item {% if page == 0 %}disabled{% endif %}">
                    <a class="page-link" href="/catalog/{{ query }}/{{ category }}/0/{{ pageSize }}" aria-label="First page">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>

                <li class="page-item {% if page == 0 %}disabled{% endif %}">
                    <a class="page-link" href="{% if page > 0 %}/catalog/{{ query }}/{{ category }}/{{ page - 1 }}/{{ pageSize }}{% else %}#{% endif %}" aria-label="Previous page">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                {% set start = max(page - 2, 0) %}
                {% set end = min(page + 2, pageCount - 1) %}

                {% if end - start < 4 %}
                    {% if start == 0 %}
                        {% set end = min(4, pageCount - 1) %}
                    {% else %}
                        {% set start = max(pageCount - 5, 0) %}
                    {% endif %}
                {% endif %}

                {% for i in start..end %}
                    <li class="page-item {% if i == page %}active{% endif %}">
                        <a class="page-link" href="/catalog/{{ query }}/{{ category }}/{{ i }}/{{ pageSize }}">{{ i + 1 }}</a>
                    </li>
                {% endfor %}

                <li class="page-item {% if page == pageCount - 1 %}disabled{% endif %}">
                    <a class="page-link" href="{% if page < pageCount - 1 %}/catalog/{{ query }}/{{ category }}/{{ page + 1 }}/{{ pageSize }}{% else %}#{% endif %}" aria-label="Next page">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>

                <li class="page-item {% if page == pageCount - 1 %}disabled{% endif %}">
                    <a class="page-link" href="/catalog/{{ query }}/{{ category }}/{{ pageCount - 1 }}/{{ pageSize }}" aria-label="Last page">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        let currentQuery = '{{ query|e('js') }}';
        let currentCategory = '{{ category|e('js') }}';

        if (currentQuery !== 'all') {
            $('#search-box').val(currentQuery);
        }
        if (currentCategory !== 'all') {
            $('#category-select').val(currentCategory);
        }
        $('#page-size-select').val('{{ pageSize }}');

        $('#page-size-select').on('change', function() {
            let selectedPageSize = $(this).val();
            window.location.href = `/catalog/${currentQuery}/${currentCategory}/0/${selectedPageSize}`;
        });

        $('#search-button').on('click', function() {
            let searchQuery = $('#search-box').val().trim();
            window.location.href = `/catalog/${searchQuery === '' ? 'all' : searchQuery}/${currentCategory}/0/{{ pageSize }}`;
        });

        $('#search-box').on('keypress', function(event) {
            if (event.key === 'Enter') {
                let searchQuery = $(this).val().trim();
                window.location.href = `/catalog/${searchQuery === '' ? 'all' : searchQuery}/${currentCategory}/0/{{ pageSize }}`;
            }
        });

        $('#category-select').on('change', function() {
            let selectedCategory = $(this).val();
            window.location.href = `/catalog/${currentQuery}/${selectedCategory}/0/{{ pageSize }}`;
        });

        $(document).on('click', '.sku', function() {
            let iwasku = $(this).data('iwasku');

            navigator.clipboard.writeText(iwasku).then(() => {
                showCopyNotification(iwasku);
            }).catch(err => {
                console.error("Failed to copy: ", err);
            });
        });

        function showCopyNotification(iwasku) {
            let notification = $('<div class="copy-notification"><i class="fas fa-check-circle"></i> Kopyalandı: ' + iwasku + '</div>');
            $('body').append(notification);
            notification.animate({ opacity: 1 }, 300);

            setTimeout(() => {
                notification.fadeOut(500, function() {
                    $(this).remove();
                });
            }, 2000);
        }
    });

    document.addEventListener('DOMContentLoaded', function () {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Expand/collapse product cards on image click
        document.querySelectorAll('.product-main-image').forEach(function(image) {
            image.addEventListener('click', function() {
                const card = this.closest('.product-card');
                card.classList.toggle('expanded');
            });
        });
    });
</script>

</body>
</html>
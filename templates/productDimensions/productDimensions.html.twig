{% extends 'base.html.twig' %}
{% block title %} Missing Product Dimensions {% endblock %}
{% block navbaritems %}{% endblock %}
{% block header %}{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <h1 class="text-center mb-4">Eksik Ürün Boyutları</h1>

        {% if products is defined and products|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                    <tr>
                        <th>Ürün ID</th>
                        <th>Ürün Adı</th>
                        <th>SKU</th>
                        <th>Boyut</th>
                        <th>İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.sku }}</td>
                            <td>
                                {% if product.dimensions %}
                                    {{ product.dimensions }}
                                {% else %}
                                    <span class="text-danger">Eksik</span>
                                {% endif %}
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary edit-dimensions" data-product-id="{{ product.id }}">Düzenle</button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                Eksik boyut bilgisi olan ürün bulunmamaktadır.
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body_scripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.edit-dimensions').forEach(function(button) {
                button.addEventListener('click', function() {
                    const productId = this.getAttribute('data-product-id');
                    // Burada düzenleme işlemi için modal açılabilir veya başka bir işlem yapılabilir
                    alert('Ürün ID: ' + productId + ' için düzenleme işlemi başlatılacak');
                });
            });
        });
    </script>
{% endblock %}